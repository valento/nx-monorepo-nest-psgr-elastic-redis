{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "//@single-client-api/user-dao": ["libs/user-dao/src/index.ts"],
      "@single-client-api/elastic-service": [
        "libs/elastic-service/src/index.ts"
      ],
      "@single-client-api/prisma-client-service-tenant": [
        "libs/prisma-client-service-tenant/src/index.ts"
      ],
      "@single-client-api/prisma-client-web": [
        "libs/prisma-client-web/src/index.ts"
      ],
      "@single-client-api/prisma-models-generator": ["tools/src/index.ts"],
      "@single-client-api/prisma-schema/models/*": ["libs/prisma-schema/src/models/index.copy.ts"],
      "@single-client-api/prisma-schema/*": ["libs/prisma-schema/*"],
      "@single-client-api/prisma-schema-tenant/models/*": ["libs/prisma-schema-tenant/src/models/index.copy.ts"],
      "@single-client-api/prisma-schema-tenant/*": ["libs/prisma-schema-tenant/*"],
      "@single-client-api/tenant-dao": ["libs/tenant-dao/src/index.ts"],
      "@single-client-api/webapi-dao": ["libs/webapi-dao/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
